<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="AppThemeRulebook" parent="Theme.MaterialComponents.DayNight.Bridge">
		<item name="android:windowAnimationStyle">@style/AppWindowAnimations</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textColor">@color/app_text</item>
		<item name="actionBarStyle">@style/LightThemeActionBar</item>
		<item name="android:actionBarStyle">@style/LightThemeActionBar</item>
		<item name="bottomAppBarStyle">@style/BottomAppBar</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:buttonStyle">@style/RulebookButtonDefault</item>
		<item name="android:editTextStyle">@style/EditText</item>
		<item name="buttonStyle">@style/RulebookButtonDefault</item>
		<item name="editTextStyle">@style/EditText</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:listViewStyle">@style/ThemeListView</item>
		<item name="bottomSheetDialogTheme">@style/AppBarBottomSheetDialogStyle</item>
		<item name="bottomSheetStyle">@style/AppBarBottomSheetStyle</item>
		<item name="fontProviderSystemFontFamily">@font/app_rulebook_productsans_fontfamily</item>
        <item name="android:fontFamily">@font/app_rulebook_productsans_fontfamily</item>
		<item name="fontFamily">@font/app_rulebook_productsans_fontfamily</item>
		<item name="snackbarStyle">@style/SnackBar</item>
		<item name="snackbarButtonStyle">@style/SnackBarButton</item>
		<item name="snackbarTextViewStyle">@style/SnackBarTextViewStyle</item>
		<item name="android:popupTheme" >@style/AppTheme.PopupOverlay</item>
		<item name="android:windowBackground">@color/app_custom_background</item>
		<item name="popupTheme">@style/AppTheme.PopupOverlay</item>
		<item name="backgroundColor">@color/app_custom_background</item>
		<item name="imageButtonStyle">@style/AppImageButtonStyle</item>
		<item name="alertDialogTheme">@style/AppAlertDialogThemeLight</item>
		<item name="tabStyle">@style/AppTabLayoutItemsStyle</item>
		<item name="radioButtonStyle">@style/AppRadioButtonStyle</item>
		<item name="android:radioButtonStyle">@style/AppRadioButtonStyle</item>
		<item name="toolbarStyle">@style/AppToolbarStyle</item>
		<item name="android:toolbarStyle">@style/AppToolbarStyle</item>
		<item name="android:webViewStyle">@style/AppWebViewStyle</item>
		<item name="navigationViewStyle">@style/NavigationViewStyle</item>
		<item name="android:textColorSecondary">@color/colorAccent</item>
		<item name="android:actionOverflowButtonStyle">@style/AppThemeRulebook.ActionButton.OverFlow</item>
	</style>

	<style name="AppWindowAnimations" parent="@android:style/Animation.Activity">
		<item name="android:activityOpenEnterAnimation">@anim/app_slide_from_right</item>
		<item name="android:activityOpenExitAnimation">@anim/app_slide_exit_to_left</item>
		<item name="android:activityCloseEnterAnimation">@anim/app_slide_from_left</item>
		<item name="android:activityCloseExitAnimation">@anim/app_slide_exit_to_right</item>
	</style>

	<style name="AppWebViewStyle" parent="android:Widget.Material.WebView">
		<item name="android:background">@color/app_custom_background</item>
		<item name="backgroundColor">@color/app_custom_background</item>
	</style>

	<style name="AppThemeRulebook.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="LightThemeActionBar" parent="Widget.AppCompat.Light.ActionBar">
		<item name="titleTextStyle">@style/ActionTitleTextStyle</item>
		<item name="subtitleTextStyle">@style/ActionSummaryTextStyle</item>
	</style>
	
	<style name="AppThemeRulebook.ActionButton.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
		<item name="android:src">@drawable/ic_actionmenu</item>
		<!-- <item name="android:tint">@color/app_custom_background</item> -->
	</style>

	<style name="AppAlertDialogThemeLight" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="titleTextColor">@color/app_text</item>
		<item name="android:textColor">@color/app_text</item>
		<item name="android:textColorPrimary">@color/app_text</item>
		<item name="textColorAlertDialogListItem">@color/app_text</item>
		<item name="android:textColorAlertDialogListItem">@color/app_text</item>
		<item name="android:titleTextColor" tools:targetApi="m">@color/app_text</item>
		<item name="android:subtitleTextColor" tools:targetApi="m">@color/app_text</item>
		<item name="subtitleTextColor" tools:targetApi="m">@color/app_text</item>
		<item name="buttonTint">@color/app_text</item>
		<item name="android:buttonTint">@color/app_text</item>
		<item name="background">@color/app_custom_background</item>
		<item name="android:background">@color/app_custom_background</item>
		<item name="backgroundTint">@color/app_custom_background</item>
		<item name="android:backgroundTint">@color/app_custom_background</item>
		<item name="colorControlNormal">@color/colorPrimary</item>
		<item name="colorControlActivated">@color/colorPrimary</item>
		<item name="android:colorControlNormal">@color/colorPrimary</item>
		<item name="android:colorControlActivated">@color/colorPrimary</item>
	</style>

	<style name="AppRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textColorPrimaryDisableOnly">@color/colorAccent</item>
		<item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
		<item name="android:textColor">@color/app_text</item>
	</style>

	<style name="AppTabLayoutItemsStyle" parent="@style/Widget.MaterialComponents.TabLayout">
		<item name="android:background">@android:color/transparent</item>
		<item name="background">@android:color/transparent</item>
		<item name="tabIconTint">@color/colorAccent</item>
		<item name="tabIndicatorColor">@color/colorAccent</item>
		<item name="tabTextColor">@color/colorAccent</item>
	</style>

	<style name="AppToolbarStyle" parent="Widget.AppCompat.Toolbar">
		<item name="navigationIcon">@drawable/ic_view_list_toolbar</item>
		<item name="navigationIconTint">@color/app_toolbar_item_color</item>
		<item name="background">@drawable/app_toolbar</item>
		<item name="android:background">@drawable/app_toolbar</item>
		<item name="android:navigationIcon">@drawable/ic_view_list_toolbar</item>
		<item name="titleTextColor">@color/app_toolbar_item_color</item>
		<item name="android:minHeight">?attr/actionBarSize</item>
		<item name="android:gravity">center</item>
		<item name="titleTextAppearance">@style/AppBarTitleTextStyle</item>
		<item name="buttonGravity">center_vertical</item>
	</style>

	<style name="BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
		<item name="android:backgroundTint">@color/colorAccent</item>
		<item name="fabCradleRoundedCornerRadius">@dimen/bottomappbar_fab_cradle_rounded_corner_radius</item>
		<item name="fabCradleVerticalOffset">@dimen/bottomappbar_fab_cradle_vertical_offset</item>
		<item name="android:minHeight">@dimen/bottomappbar_height</item>
		<item name="maxButtonHeight">@dimen/bottomappbar_height</item>
		<item name="elevation">@dimen/bottomappbar_elevation</item>
	</style>

	<style name="ActionTitleTextStyle">
		<item name="android:textColor">@color/app_text</item>
		<item name="android:textSize">@dimen/action_title_textsize</item>
	    <item name="android:textStyle">bold</item>
	</style>

	<style name="ActionSummaryTextStyle">
		<item name="android:textColor">@color/app_text</item>
		<item name="android:textSize">@dimen/action_subtitle_textsize</item>
	    <item name="android:textStyle">normal</item>
	</style>

	<style name="AppBarTitleTextStyle" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/app_toolbar_item_color</item>
		<item name="android:textSize">@dimen/appbar_title_textsize_large</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="AppTopBarTitleTextStyle" parent="Widget.AppCompat.TextView">
		<item name="android:textAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title</item>
		<item name="android:textColor">@color/app_toolbar_item_color</item>
		<item name="android:textSize">@dimen/appbar_title_textsize_large</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@color/colorAccent</item>
		<item name="android:minHeight">?actionBarSize</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="AppBarBottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
		<item name="enforceTextAppearance">true</item>
		<item name="enforceMaterialTheme">false</item>
		<item name="iconTint">@color/colorAccent</item>
		<item name="itemIconSize">@dimen/app_bottom_navigation_icon_size</item>
		<item name="bottomSheetStyle">@style/AppBarBottomSheetStyle</item>
	</style>

	<style name="AppBarBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
		<item name="elevation">@dimen/app_bottom_navigation_elevation</item>
		<item name="android:background">@drawable/app_bottomsheetdialog_shape</item>
	</style>

	<style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
		<!-- set background color TRANSPARENT -->
		<item name="android:background">@android:color/transparent</item>
		<item name="background">@android:color/transparent</item>

		<!-- remove shadow -->
		<item name="elevation">0dp</item>
		<item name="android:elevation">0dp</item>

		<!-- set item text and icon colors -->
		<item name="itemTextColor">@color/app_bottomsheetdialog_primary</item>
		<item name="itemIconTint">@color/app_bottomsheetdialog_accent</item>
	</style>

	<style name="Headlines" parent="Widget.AppCompat.TextView">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/action_headlines_textsize</item>
		<item name="android:textIsSelectable">true</item>
		<item name="android:gravity">center</item>
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	</style>

	<style name="BottomSheetDialogHeadline" parent="Widget.AppCompat.TextView">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/app_bottomsheetdialog_headline_size</item>
		<item name="android:textColor">@color/app_bottomsheetdialog_primary</item>
		<item name="android:textIsSelectable">false</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="ThemeListView" parent="Widget.AppCompat.ListView">
		<item name="android:textSize">@dimen/action_listview_textsize</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textIsSelectable">true</item>
	</style>

	<style name="EditText" parent="Widget.AppCompat.EditText">
		<item name="android:minHeight">@dimen/app_minHeight</item>
		<item name="android:textStyle">normal</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColorHint">@color/colorAccent</item>
		<item name="android:textColor">@color/colorAccent</item>
	</style>

	<style name="TextBold" parent="Widget.AppCompat.TextView">
		<item name="android:textStyle">bold</item>
		<item name="android:textIsSelectable">true</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	</style>

	<style name="TextRegular" parent="Widget.AppCompat.TextView">
		<item name="android:textStyle">normal</item>
		<item name="android:textIsSelectable">true</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	</style>

	<style name="RulebookButtonTop" parent="Widget.AppCompat.Button">
		<item name="android:stateListAnimator">@animator/btn_anim_zoom</item>
		<item name="android:background">@drawable/buttonshape_top_rightandleft</item>
		<item name="android:textSize">@dimen/action_smallbutton_textsize</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="RulebookButtonBottom" parent="Widget.AppCompat.Button">
		<item name="android:stateListAnimator">@animator/btn_anim_zoom</item>
		<item name="android:background">@drawable/buttonshape_bottom_rightandleft</item>
		<item name="android:textSize">@dimen/action_smallbutton_textsize</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="RulebookButtonDefault" parent="Widget.AppCompat.Button">
		<item name="android:stateListAnimator">@animator/btn_anim_zoom</item>
		<item name="android:background">@drawable/buttonshape</item>
		<item name="android:textSize">@dimen/action_smallbutton_textsize</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="RulebookButtonHuge" parent="Widget.AppCompat.Button">
		<item name="android:stateListAnimator">@animator/btn_anim_zoom</item>
		<item name="android:background">@drawable/buttonshape_huge</item>
		<item name="android:textSize">@dimen/app_hugebutton_textsize</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_height">@dimen/app_hugebutton_default_height</item>
		<item name="android:layout_marginTop">@dimen/app_hugebutton_default_marginBottomAndTop</item>
		<item name="android:layout_marginBottom">@dimen/app_hugebutton_default_marginBottomAndTop</item>
		<item name="android:layout_marginRight">@dimen/app_hugebutton_default_marginLeftAndRight</item>
		<item name="android:layout_marginEnd">@dimen/app_hugebutton_default_marginLeftAndRight</item>
		<item name="android:layout_marginLeft">@dimen/app_hugebutton_default_marginLeftAndRight</item>
		<item name="android:layout_marginStart">@dimen/app_hugebutton_default_marginLeftAndRight</item>
	</style>

	<style name="AppRatingBar" parent="Theme.MaterialComponents.Bridge">
		<item name="colorControlNormal">@color/colorPrimary</item>
		<item name="colorControlActivated">@color/colorPrimary</item>
	</style>

	<style name="SnackBar" parent="Widget.Design.Snackbar">
		<item name="android:minWidth">@dimen/app_design_snackbar_min_width</item>
		<item name="android:maxWidth">@dimen/app_design_snackbar_max_width</item>
		<item name="android:background">@drawable/shape_snackbar</item>
		<item name="android:layout_marginLeft">@dimen/app_design_snackbar_margin_horizontal</item>
		<item name="android:layout_marginRight">@dimen/app_design_snackbar_margin_horizontal</item>
		<item name="android:layout_marginTop">@dimen/app_design_snackbar_margin_vertical</item>
		<item name="android:layout_marginBottom">@dimen/app_design_snackbar_margin_vertical</item>
		<item name="maxActionInlineWidth">@dimen/app_design_snackbar_action_inline_max_width</item>
	</style>

	<style name="SnackBarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
		<item name="android:textColor">@color/app_text</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="SnackBarTextViewStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
		<item name="android:maxLines">@integer/snackbarMaxLines</item>
		<item name="maxLines">@integer/snackbarMaxLines</item>
		<item name="android:textColor">@color/app_text</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:colorBackground">@color/app_custom_background</item>
		<item name="android:textColor">@color/colorAccent</item>
	</style>

	<!-- Default theme for activities that don't actually display a UI; that
         is, they finish themselves before being resumed. -->
	<style name="Theme.MaterialComponents.NoDisplay_Custom" parent="Theme.MaterialComponents.Bridge">
		<!-- <item name="android:windowBackground">@null</item> -->
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@null</item>
		<item name="android:windowDisablePreview">true</item>
		<item name="android:windowNoDisplay">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
	</style>

	<style name="Theme.MaterialComponents.NoDisplay_Custom.Fullscreen" parent="Theme.MaterialComponents.Bridge">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowNoTitle">true</item>
	</style>
	<!-- Default theme for activities that don't actually display a UI; that
     is, they finish themselves before being resumed. -->

	<style name="AppImageButtonStyle" parent="Widget.AppCompat.ImageButton">
		<item name="android:stateListAnimator" >@animator/btn_anim_zoom</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="background">@android:color/transparent</item>
	</style>
</resources>
